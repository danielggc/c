void recivirDatos(){

  printf("escrivar la cantida de datos " );
  scant("%d",numDatosP );
  puntero =new int[numDatosP];
  for( int i=0;i<=numDatosP;i++){
     
    scant("escriva los los datos %d",puntero[i]); 


  }
  

